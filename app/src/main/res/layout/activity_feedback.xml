<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="#FFA500">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Feedback"
        android:textSize="24sp"
        android:textColor="#000000"
        android:fontFamily="sans-serif-medium"
        android:paddingBottom="8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Weâ€™ve grabbed your name and email from your login, but if you prefer, you can change it."
        android:textColor="#000000"
        android:textSize="14sp"
        android:paddingBottom="16dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textColor="#000000"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/editTextName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter your name"
        android:background="@android:color/white"
        android:padding="12dp"
        android:textColor="#000000"
        android:textSize="16sp"
        android:layout_marginBottom="16dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Service/Product Used"
        android:textColor="#000000"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/editTextServiceProductUsed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter the service or product you used"
        android:background="@android:color/white"
        android:padding="12dp"
        android:textColor="#000000"
        android:textSize="16sp"
        android:layout_marginBottom="16dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Reply Method (type your email)"
        android:textColor="#000000"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/editTextEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="firstnameLastname@email.com"
        android:inputType="textEmailAddress"
        android:background="@android:color/white"
        android:padding="12dp"
        android:textColor="#000000"
        android:textSize="16sp"
        android:layout_marginBottom="16dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Delivery Experience"
        android:textColor="#000000"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/editTextDeliveryExperience"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:hint="Share your delivery experience"
        android:background="@android:color/white"
        android:padding="12dp"
        android:textColor="#000000"
        android:textSize="16sp"
        android:layout_marginBottom="16dp"
        android:gravity="top" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Suggestions for Improvement"
        android:textColor="#000000"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/editTextSuggestions"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:hint="Any suggestions to improve?"
        android:background="@android:color/white"
        android:padding="12dp"
        android:textColor="#000000"
        android:textSize="16sp"
        android:layout_marginBottom="16dp"
        android:gravity="top" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rate Us"
        android:textColor="#000000"
        android:textSize="14sp" />

    <RatingBar
        android:id="@+id/ratingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        android:stepSize="1.0"
        android:layout_gravity="start"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/submitButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:textColor="#FFFFFF"
        android:backgroundTint="#2E8B57"
        android:fontFamily="sans-serif-medium"
        android:padding="12dp"
        android:layout_gravity="end"
        android:layout_marginTop="16dp" />
</LinearLayout>